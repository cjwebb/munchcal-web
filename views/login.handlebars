<div class="page-header">
    <h1>Login</h1>
</div>

{{#if errorFlash }}
<div class="alert alert-danger" role="alert"><p>{{errorFlash}}</p></div>
{{/if}}

{{#if messageFlash }}
<div class="alert alert-success" role="alert"><p>{{ messageFlash }}</p></div>
{{/if}}

<div class="row">
    <div class="col-md-12">
<form method="post">
    <div class="form-group">
        <label for="username">Email</label>
        <input type="email" class="form-control" id="username" name="username" placeholder="Enter email">
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="Password">
    </div>
    <button type="submit" class="btn btn-default">Login</button>
</form>
</div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <p>Not signed up yet? <a href="/signup">Sign up here.</a></p>
    </div>
</div>

